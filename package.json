{
  "name": "cypress-yaml-plugin",
  "version": "0.1.10",
  "description": "Convert YAML specs into Cypress tests with validation, schema tooling, and custom command support.",
  "type": "module",
  "main": "src/index.js",
  "files": [
    "bin",
    "schema.json",
    "scripts",
    "src"
  ],
  "scripts": {
    "build:schema": "node ./scripts/build-schema.js",
    "lint": "prettier --check \"**/*.{js,json,md,yaml,yml}\"",
    "format": "prettier --write \"**/*.{js,json,md,yaml,yml}\"",
    "test": "node --test"
  },
  "keywords": [
    "cypress",
    "yaml",
    "testing",
    "preprocessor",
    "schema"
  ],
  "author": "jackcrane",
  "license": "MIT",
  "exports": {
    ".": "./src/index.js",
    "./schema": "./schema.json",
    "./commands": "./src/commands/registry.js"
  },
  "bin": {
    "cypress-yaml": "./bin/cli.js"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "js-yaml": "^4.1.0",
    "magic-string": "^0.30.10",
    "prettier": "^3.2.5",
    "yaml": "^2.4.1",
    "zod": "^3.25.0",
    "zod-to-json-schema": "^3.25.0"
  }
}
